{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "comma-dangle": ["warn", "never"],
    "quotes": ["warn", "single"],
    "semi": ["warn", "never"],
    "max-len": ["warn", { "code": 140 }],
    "arrow-parens": ["warn", "as-needed"]
  }
}
